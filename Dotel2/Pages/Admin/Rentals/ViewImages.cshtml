@page "{id:int}"
@model Dotel2.Pages.Admin.Rentals.ViewImagesModel
@{
}
@{
    ViewData["Title"] = "View Images";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1 class="mt-4">@ViewData["Title"]</h1>
        <div class="row">
            @foreach (var image in Model.Images)
            {
                <div class="col-md-3">
                    <div class="card">
                        <img src="@image.Sourse" class="img-fluid" alt="Rental Image">
                        <div class="card-body">
                            <form method="post" asp-page-handler="DeleteImage" asp-route-imageId="@image.ImageId">
                                <button type="submit" class="btn btn-danger">Xoá</button>
                            </form>
                        </div>
                    </div>   
                </div>
            }
        </div>
    </div>
</body>
</html>