@page
@model Dotel2.Pages.Login.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="css/loginsignin.css" />
    <script src="https://kit.fontawesome.com/682f180637.js"
            crossorigin="anonymous"></script>
</head>
<body>
    <section class="userform">
        <!--Bắt Đầu Phần Hình Ảnh-->
        <div class="img-bg">
            <img src="img/signinlogin.png">
        </div>
        <!--Kết Thúc Phần Hình Ảnh-->
        <!--Bắt Đầu Phần Nội Dung-->
        <div class="noi-dung">
            <div class="form1">
                <h2>Đăng nhập</h2>
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <form method="post" id="login">
                    <div class="input-form">
                        @* <span>Email hoặc số điện thoại</span> *@
                        <span>Email</span>
                        <input type="text" name="email" id="email" required>
                    </div>

                    <div class="input-form">
                        <span>Mật Khẩu</span>
                        <input type="password" name="password" id="password" required>
                    </div>

                    <div class="nho-dang-nhap">
                        <label><input type="checkbox" name=""> Lưu thông tin đăng nhập</label>
                    </div>

                    <div class="input-form">
                        <input style="background-color: sandybrown; color: black" type="submit" value="Đăng Nhập">
                    </div>
                    <div class="input-form">
                        <p><a href="forgotpassword">Quên Mật Khẩu?</a> hoặc <a href="register">Đăng Ký</a></p>
                    </div>
                </form>
            </div>
        </div>
        <!--Kết Thúc Phần Nội Dung-->
    </section>
</body>
</html>

<style>
    /* Định nghĩa lớp chung cho alert */
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
        font-size: 16px;
    }

    /* Định nghĩa lớp cho alert-danger (Thông báo lỗi) */
    .alert-danger {
        color: #a94442;
        background-color: #f2dede;
        border-color: #ebccd1;
    }

    /* Định nghĩa lớp cho alert-success (Thông báo thành công) */
    .alert-success {
        color: #3c763d;
        background-color: #dff0d8;
        border-color: #d6e9c6;
    }

</style>